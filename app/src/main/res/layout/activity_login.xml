<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.LoginActivity">

    <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp" app:srcCompat="@drawable/octocat"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="108dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Welcome To Yet Another Github Client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_display"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:layout_constraintStart_toStartOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginTop="390dp"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="116dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_login"/>
    <Button
            android:text="Authorize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_authorize" app:layout_constraintEnd_toEndOf="@+id/tv_display"
            app:layout_constraintStart_toStartOf="@+id/tv_display" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@+id/tv_display"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <Button
            android:text="Usename and password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@+id/tv_display" android:layout_marginBottom="150dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textStyle="bold"
            style="@style/Widget.AppCompat.Button.Colored"/>
</android.support.constraint.ConstraintLayout>